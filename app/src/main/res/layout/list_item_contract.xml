<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardUseCompatPadding="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractHostAddress"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:text="Spending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:layout_marginTop="4dp"
            card_view:layout_constraintTop_toBottomOf="@+id/contractHostAddress"
            card_view:layout_constraintLeft_toLeftOf="@+id/contractHostAddress"/>

        <TextView
            android:text="Storing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractStorage"
            card_view:layout_constraintLeft_toLeftOf="@+id/textView19"
            card_view:layout_constraintTop_toBottomOf="@+id/textView19"/>

        <TextView
            android:text="Uploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractUpload"
            card_view:layout_constraintTop_toBottomOf="@+id/contractStorage"
            card_view:layout_constraintLeft_toLeftOf="@+id/contractStorage"/>

        <TextView
            android:text="Downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractDownload"
            card_view:layout_constraintTop_toBottomOf="@+id/contractUpload"
            card_view:layout_constraintLeft_toLeftOf="@+id/contractUpload"/>

        <TextView
            android:text="Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractSize"
            card_view:layout_constraintTop_toBottomOf="@+id/contractEnd"
            card_view:layout_constraintRight_toRightOf="@+id/contractEnd"/>

        <TextView
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractStart"
            card_view:layout_constraintTop_toTopOf="@+id/textView19"
            android:layout_marginEnd="16dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>

        <TextView
            android:text="End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractEnd"
            card_view:layout_constraintTop_toBottomOf="@+id/contractStart"
            card_view:layout_constraintRight_toRightOf="@+id/contractStart"/>

        <TextView
            android:text="Total cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractCost"
            card_view:layout_constraintTop_toBottomOf="@+id/contractSize"
            card_view:layout_constraintRight_toRightOf="@+id/contractSize"/>

        <TextView
            android:text="Remaining funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contractFunds"
            card_view:layout_constraintTop_toBottomOf="@+id/contractCost"
            card_view:layout_constraintRight_toRightOf="@+id/contractCost"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>