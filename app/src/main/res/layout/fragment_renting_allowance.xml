<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        card_view:cardUseCompatPadding="true"
        android:layout_height="104dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Spending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"/>

            <TextView
                android:text="Contracts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contractSpending"
                card_view:layout_constraintTop_toBottomOf="@+id/textView16"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:text="Unspent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unspentText"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/contractSpending"
                card_view:layout_constraintLeft_toLeftOf="@+id/contractSpending"/>

            <TextView
                android:text="Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadSpending"
                card_view:layout_constraintTop_toTopOf="@+id/contractSpending"
                android:layout_marginEnd="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"/>

            <TextView
                android:text="Download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downloadSpending"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/uploadSpending"
                card_view:layout_constraintRight_toRightOf="@+id/uploadSpending"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>